@model Organic_Shop.Models.TinDang

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>


<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                <img src="~/images/news/@Model.Thumb" alt="">w
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.Title</h4>
                <p class="text-muted m-b-0">Code: @Model.PostId</p>
            </div>
        </div>

        <div class="m-b-15">
            <a type="button" asp-area="Admin" asp-controller="AdminNews" asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-success btn-tone"><i class="anticon anticon-edit"></i> Edit</a>
            <a type="button" asp-area="Admin" asp-controller="AdminNews" asp-action="Index" class="btn btn-primary btn-tone"><i class="anticon anticon-arrow-left"></i> Back to list</a>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-overview">Overview</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#product-images">Images</a>
        </li>
    </ul>
</div>
<div class="container-fluid">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-overview">

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Basic Info</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>Title:</td>
                                    <td class="text-dark font-weight-semibold">@Model.Title</td>
                                </tr>
                                <tr>
                                    <td>Title:</td>
                                    <td class="text-dark font-weight-semibold">@Model.Author</td>
                                </tr>
                                <tr>
                                    <td>Title:</td>
                                    <td class="text-dark font-weight-semibold">@Model.Scontents</td>
                                </tr>
                                @if (Model.Published)
                                {
                                    <tr>
                                        <td>Status:</td>
                                        <td>
                                            <span class="badge badge-pill badge-cyan">Public</span>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>Status:</td>
                                        <td>
                                            <span class="badge badge-pill badge-red">Private</span>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Option Info</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>Alias:</td>
                                    <td>@Model.Alias</td>
                                </tr>
                                <tr>
                                    <td>Meta key:</td>
                                    <td>@Model.MetaKey</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">News content</h4>
                </div>
                <div class="card-body">
                    <p>@Model.Contents</p>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-images">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <img class="img-fluid" src="~/images/news/@Model.Thumb" alt="">
                        </div>
                        <div class="col-md-3">
                            <img class="img-fluid" src="assets/images/others/product-2.jpg" alt="">
                        </div>
                        <div class="col-md-3">
                            <img class="img-fluid" src="assets/images/others/product-3.jpg" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

