@model Organic_Shop.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit product</h1>

<<form asp-action="Edit" asp-route-id="@Model.ProductId" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="Thumb" />
        <input type="hidden" asp-for="DateCreated" />
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">

            </div>
            <div class="m-b-15">
                <button type="submit" class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Save</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Option Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Description</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="control-label font-weight-semibold">Product Name</label>
                        <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="control-label font-weight-semibold">Price</label>
                            <input asp-for="Price" class="form-control" placeholder="Enter price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label font-weight-semibold">Discount</label>
                            <input asp-for="Discount" class="form-control" placeholder="Enter discount" />
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="control-label font-weight-semibold">Category</label>
                            <select class="custom-select" asp-for="CatId" asp-items="ViewBag.ListCategory">
                                <option value="cloths" selected disabled>Category</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label font-weight-semibold">Quantity</label>
                            <input asp-for="UnitsInStock" class="form-control" />
                            <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-semibold">Thumbnail</label>
                        <input name="fThumb" type="file" asp-for="Thumb" class="form-control-file" />
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <div class="switch m-r-10">
                            <input type="checkbox" asp-for="Active">
                            <label for="Active"></label>
                        </div>
                        <label>Active</label>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <div class="switch m-r-10">
                            <input type="checkbox" asp-for="HomeFlag">
                            <label for="HomeFlag"></label>
                        </div>
                        <label>HomeFlag</label>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <div class="switch m-r-10">
                            <input type="checkbox" asp-for="BestSellers">
                            <label for="BestSellers"></label>
                        </div>
                        <label>BestSellers</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="form-group">
                            <label class="control-labe font-weight-semibold">MetaDesc :</label>
                            <input asp-for="MetaDesc" class="form-control" />
                            <span asp-validation-for="MetaDesc" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label class="control-label font-weight-semibold">MetaKey :</label>
                            <input asp-for="MetaKey" class="form-control" />
                            <span asp-validation-for="MetaKey" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <div id="productDescription">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

