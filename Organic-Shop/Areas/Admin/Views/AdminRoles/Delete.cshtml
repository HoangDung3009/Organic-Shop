@model Organic_Shop.Models.Role

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>



<div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Info</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID:</td>
                            <td>	@Model.RoleId</td>
                        </tr>
                        <tr>
                            <td>Role Name:</td>
                            <td>	@Model.RoleName</td>
                        </tr>
                        <tr>
                            <td>Description:</td>
                            <td>@Model.Description</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="Delete" class="btn btn-danger btn-tone m-r-5" /> 
        <a asp-action="Index" class="btn btn-primary btn-tone m-r-5">Back to List</a>
    </form>
</div>
